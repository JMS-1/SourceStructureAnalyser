<Window x:Class="SourceStructureAnalyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SourceStructureAnalyser"
        mc:Ignorable="d"
        DataContext="{StaticResource appViewModel}"
        Title="Quellcode-Struktur analysieren" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button>Laden</Button>
            <Button Click="OnSave">Speichern</Button>
        </StackPanel>
    </Grid>
</Window>
